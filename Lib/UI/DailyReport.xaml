<Window x:Class="UI.DailyReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="DailyReport" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridTable" HorizontalAlignment="Left" Height="153" Margin="258,158,0,0" VerticalAlignment="Top" Width="384"/>
        <RadioButton x:Name="JournalsRB" Content="Journals" HorizontalAlignment="Left" Margin="388,138,0,0" VerticalAlignment="Top" Checked="JournalsRB_Checked"/>
        <RadioButton x:Name="BooksRB" Content="Books" HorizontalAlignment="Left" Margin="281,138,0,0" VerticalAlignment="Top" Checked="BooksRB_Checked"/>
        <RadioButton x:Name="RentedItemsRB" Content="Rented Items" HorizontalAlignment="Left" Margin="502,138,0,0" VerticalAlignment="Top" Checked="RentedItemsRB_Checked"/>
        <TextBox x:Name="ItemsCountTxt" HorizontalAlignment="Left" Height="22" Margin="258,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384"/>
        <Button x:Name="BackBtn" Content="Back to Home Page" HorizontalAlignment="Left" Margin="117,372,0,0" VerticalAlignment="Top" Width="130" Height="25" Click="BackBtn_Click"/>

    </Grid>
</Window>
